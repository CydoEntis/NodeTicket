<%- include("../includes/header.ejs")%>
</head>
<body>
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="panel">
            <div class="panel-header">
                <a href="/admin"><div class="btn btn-back"><i class='bx bx-arrow-back'></i></div></a><h1>Admin Panel</h1>
            </div>
            <section class="">
                <table class="admin-table">
                    <div class="admin-controls">
                        <a class="badge badge-minor"href="">All Tasks</a>
                        <a class="badge badge-moderate"href="">In Progress</a>
                        <a class="badge badge-urgent"href="">On Hold</a>
                        <a class="badge badge-complete"href="">Completed</a>
                    </div>
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Submitted By</th>
                        <th>Assigned To</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                    <% for(let ticket of tickets) {%>
                    <tr>
                        <td><%= ticket.createdAt %></td>
                        <td><%= ticket._doc.title %></td>
                        <td><%= ticket.createdBy %></td>
                        <td><%= ticket._doc.pending ? 'Pending' : ticket.assingedTo %></td>
                        <td><%= ticket._doc.completed ? 'Completed' : 'In Progress' %></td>
                        <td><a href="/edit-task/<%= ticket._doc._id %>">Review</a></td>
                    </tr>
                    <% } %>
                </table>
            </section>
        </section>
    </main>
<%- include("../includes/footer.ejs")%>`