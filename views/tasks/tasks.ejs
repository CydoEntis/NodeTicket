<%- include("../includes/header.ejs")%>
    <title><%= title %></title>
</head>

<body>
    <!-- <%- include("../includes/navigation.ejs")%> -->
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="page-header flex align-items space-between">
            <div>
                <h2 class="page-title">Tasks</h2>
                <p class="page-description">Here are all current tasks. You will find information for each task as well as who submitted it.</p>
            </div>
            <div>
                <div class="search-control">
                    <label for="search"><i class='bx bx-search'></i></label>
                    <input class="search-bar" type="text" id="search" name="search">
                </div>
            </div>
            <div>
                <a class="btn"href="/create-task">Create Task</a>
            </div>
        </section>
        <section class="flex">
            <div class="column">
                <div class="column-header">
                    <div class="header-section">
                        <div class="flex align-center">
                            <h3 class="column-title flex align-center">All Tasks <span class="circle tasks-all"></span></h3><a class="badge badge-minor" href="/tasks/all">View All Tasks</a>
                        </div>
                        <p class="count"><%= tasks.length %> tasks</p>
                    </div>
                </div>
                <% for(let task of tasks) {%>
                    <% if(!task._doc.isOnHold && !task._doc.isCompleted && !task._doc.isReviewing) { %>
                        <a href="/task/<%= task._doc._id %>">
                            <div class="card">
                                <h4 class="card-title"><%= task._doc.title %></h4>
                                <p class="card-description"><%= task.description %></p>
                                <div class="card-badges">
                                    <!-- TODO: Add a check for if task is less then a day old add a new badge. -->
                                    <% if(task._doc.severity === 'urgent') { %>
                                        <span class="badge badge-urgent"><%= task._doc.severity %></span>
                                    <% } else if(task._doc.severity === 'moderate') { %>
                                        <span class="badge badge-moderate"><%= task._doc.severity %></span>
                                    <% } else if (task._doc.severity === 'minor') { %>
                                        <span class="badge badge-minor"><%= task._doc.severity %></span>
                                    <% } else { %>
                                        <span class="badge"><%= task._doc.severity %></span>
                                    <% } %>
                                </div>
                                <p class="card-date"><%= task.createdAt %></p>
                            </div>
                        </a>
                    <% } %>
                <% } %>
            </div>

            <div class="column">
                <div class="column-header">
                    <div class="header-section">
                        <div class="flex align-center">
                            <h3 class="column-title flex align-center">In Progress <span class="circle tasks-progress"></span></h3><a class="badge badge-moderate" href="/tasks/in-progress">View All In Progress</a>
                        </div>
                        <p class="count"><%= tasks.length %> tasks</p>
                    </div>
                </div>
                <% for(let task of tasks) {%>
                    <% if(task._doc.assignedTo && !task._doc.isOnHold && !task._doc.isCompleted && !task._doc.isReviewing) { %>
                        <a href="/task/<%= task._doc._id %>">
                            <div class="card">
                                <h4 class="card-title"><%= task._doc.title %></h4>
                                <p class="card-description"><%= task.description %></p>
                                <div class="card-badges">
                                    <!-- TODO: Add a check for if task is less then a day old add a new badge. -->
                                    <% if(task._doc.severity === 'urgent') { %>
                                        <span class="badge badge-urgent"><%= task._doc.severity %></span>
                                    <% } else if(task._doc.severity === 'moderate') { %>
                                        <span class="badge badge-moderate"><%= task._doc.severity %></span>
                                    <% } else if (task._doc.severity === 'minor') { %>
                                        <span class="badge badge-minor"><%= task._doc.severity %></span>
                                    <% } else { %>
                                        <span class="badge"><%= task._doc.severity %></span>
                                    <% } %>
                                </div>
                                <p class="card-date"><%= task.createdAt %></p>
                            </div>
                        </a>
                    <% } %>    
                <% } %>
            </div>

            <div class="column">
                <div class="column-header">
                    <div class="header-section">
                        <div class="flex align-center">
                            <h3 class="column-title flex align-center">On Hold <span class="circle tasks-hold"></span></h3><a class="badge badge-urgent" href="/tasks/on-hold">View All On Hold</a>
                        </div>
                        <p class="count"><%= tasks.length %> tasks</p>
                    </div>
                </div>
                <% for(let task of tasks) {%>
                    <% if(task._doc.isOnHold) { %>
                        <a href="/task/<%= task._doc._id %>">
                            <div class="card">
                                <h4 class="card-title"><%= task._doc.title %></h4>
                                <p class="card-description"><%= task.description %></p>
                                <div class="card-badges">
                                    <!-- TODO: Add a check for if task is less then a day old add a new badge. -->
                                    <% if(task._doc.severity === 'urgent') { %>
                                        <span class="badge badge-urgent"><%= task._doc.severity %></span>
                                    <% } else if(task._doc.severity === 'moderate') { %>
                                        <span class="badge badge-moderate"><%= task._doc.severity %></span>
                                    <% } else if (task._doc.severity === 'minor') { %>
                                        <span class="badge badge-minor"><%= task._doc.severity %></span>
                                    <% } else { %>
                                        <span class="badge"><%= task._doc.severity %></span>
                                    <% } %>
                                </div>
                                <p class="card-date"><%= task.createdAt %></p>
                            </div>
                        </a>
                    <% } %>
                <% } %>
            </div>

            <div class="column">
                <div class="column-header">
                    <div class="header-section">
                        <div class="flex align-center">
                            <h3 class="column-title flex align-center">Complete<span class="circle tasks-complete"></span></h3><a class="badge badge-complete" href="/tasks/complete">View All Completed</a>
                        </div>
                        <p class="count"><%= tasks.length %> tasks</p>
                    </div>
                </div>
                <% for(let task of tasks) {%>
                    <% if(task._doc.isCompleted) { %>
                        <a href="/task/<%= task._doc._id %>">
                            <div class="card card-completed">
                                <h4 class="card-title"><%= task._doc.title %></h4>
                                <p class="card-description"><%= task.description %></p>
                                <div class="card-badges">
                                    <!-- TODO: Add a check for if task is less then a day old add a new badge. -->
                                    <% if(task._doc.severity === 'urgent') { %>
                                        <span class="badge badge-urgent"><%= task._doc.severity %></span>
                                    <% } else if(task._doc.severity === 'moderate') { %>
                                        <span class="badge badge-moderate"><%= task._doc.severity %></span>
                                    <% } else if (task._doc.severity === 'minor') { %>
                                        <span class="badge badge-minor"><%= task._doc.severity %></span>
                                    <% } else { %>
                                        <span class="badge"><%= task._doc.severity %></span>
                                    <% } %>
                                </div>
                                <p class="card-date"><%= task.createdAt %></p>
                            </div>
                        </a>
                    <% } %>
                <% } %>
            </div>
        </section>
    </main>
    <%- include("../includes/footer.ejs")%>

   