<%- include("../includes/header.ejs")%>
</head>

<body>
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="container">
            <div class="task__detail">
                <h1 class="task__detail-title"><%= task._doc.title %></h1>
                <div class="task__detail-info">
                    <h3 class="task__detail-date"><%= task.createdAt %></h3>
                    <div class="task__detail-severity">
                        <p><%= task._doc.severity %></p>
                    </div>
                </div>
                <p class="task__detail-description"><%= task._doc.description %></p>
                <div>
                    Photos...
                </div>
                <div class="task__detail-btns">
                    <% if(isAdmin) { %>
                        <a href="/edit-task/<%= task._doc._id %>"class="btn btn__edit">Edit</a>
                    <% } %>
                    <% if(!task._doc.completed && task._doc.completed) {%>
                        <form action="/complete-task" method="POST">
                            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                            <input type="hidden" value="<%= task._doc._id %>" name="id">
                            <button class="btn btn__complete" type="submit">Submit For Review</button>
                        </form>
                    <% } %>
                    <% if(!task._doc.isReviewing) {%>
                        <form action="/submit-for-review" method="POST">
                            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                            <input type="hidden" value="<%= task._doc._id %>" name="id">
                            <button class="btn btn__complete" type="submit">Submit For Review</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </section>
    </main>
    <%- include("../includes/footer.ejs")%>