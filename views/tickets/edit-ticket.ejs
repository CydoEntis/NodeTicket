<%- include("../includes/header.ejs")%>
</head>
<body>
    <%- include("../includes/navigation.ejs")%>
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="container">
            <form action="/edit-ticket" method="POST">
                <div class="form__control">
                    <label for="title">Title</label>
                    <input type="text" placeholder="Enter name of ticket" id="title" name="title" value="<%= ticket._doc.title %>">
                </div>
                <div class="form__control">
                    <label for="severity">Severity</label>
                    <select name="severity">
                        <option value="urgent" default>Severe</option>
                        <option value="moderate" >Moderate</option>
                        <option value="minor" >Minor</option>
                    </select>
                </div>
                <div class="form__control">
                    <label for="description">Description</label>
                    <textarea name="description"><%= ticket._doc.description %></textarea>
                </div>
                <div class="form__control">
                    <button type="submit" class="btn btn__cta">Update Ticket</button>
                </div>
                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                <input type="hidden" value="<%= ticket._doc._id %>" name="id">
            </form>
        </section>
    </main>
<%- include("../includes/footer.ejs")%>