<%- include("../includes/header.ejs")%>
</head>
<body>
    <%- include("../includes/navigation.ejs")%>
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="container">
            <form action="/add-ticket" method="POST">
                <div class="form__control">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Enter name of ticket" id="name" value="<%= ticket.title %>">
                </div>
                <div class="form__control">
                    <label for="title">Severity</label>
                    <select>
                        <option value="urgent" default>Severe</option>
                        <option value="moderate" >Moderate</option>
                        <option value="minor" >Minor</option>
                    </select>
                </div>
                <div class="form__control">
                    <label for="description">Description</label>
                    <textarea><%= ticket.description %></textarea>
                </div>
                <div class="form__control">
                    <button type="submit" class="btn btn__cta">Update Ticket</button>
                </div>
            </form>
        </section>
    </main>
<%- include("../includes/footer.ejs")%>