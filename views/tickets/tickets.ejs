<%- include("../includes/header.ejs")%>
    <title><%= title %></title>
</head>

<body>
    <%- include("../includes/navigation.ejs")%>
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="container">
            <div class="ticket__controls">
                <a href="/dashboard"><div class="ticket__controls-back"><i class='bx bx-arrow-back'></i></div></a>
                <h3><%= title %></h3>
            </div>
        </section>
        <section class="container tickets__active">
            <h3 class="ticket__category">Tickets - <span class="ticket__count"> <%= tickets.length %></span></h3>
            <% if(tickets.length <= 0) { %>
                <p class="error__not-found">No <%= title %> Available</p>
            <% } else { %>
                <% for(let ticket of tickets ){ %>
                    <% if(!ticket._doc.completed) {%>
                        <a href="/ticket-details/<%= ticket._doc._id %>" class="ticket__link">
                            <div class="ticket ticket__item">
                                <div class="ticket__status"></div>
                                <div class="ticket__info">
                                    <h3 class="ticket__info-title"><%= ticket._doc.title %></h3>
                                    <p class="ticket__info-date"><%= ticket.createdAt %></p>
                                </div>
                            </div>
                        </a>
                    <% } %>
                <% } %>
            <% } %>
        </section>
        <section class="container tickets__completed">
            <h3 class="ticket__category">Completed - <span class="ticket__count"><%= ticketCount %></span></h3>
            <% if(ticketCount <= 0) { %>
                <p class="error__not-found">No <%= title %> Completed</p>
            <% } else { %>
                <% for(let ticket of tickets ){ %>
                    <% if(ticket._doc.completed) {%>
                        <a href="/ticket-details/<%= ticket._doc._id %>" class="ticket__link">
                            <div class="ticket ticket__item ticket__item-completed">
                                <div class="ticket__status"></div>
                                <div class="ticket__info">
                                    <h3 class="ticket__info-title"><%= ticket._doc.title %></h3>
                                    <p class="ticket__info-date"><%= ticket.createdAt %></p>
                                </div>
                            </div>
                        </a>
                    <% } %>
                <% } %>
            <% } %>
        </section>
    </main>
    <%- include("../includes/footer.ejs")%>