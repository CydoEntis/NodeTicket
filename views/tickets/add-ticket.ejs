<%- include("../includes/header.ejs")%>
</head>
<body>
    <%- include("../includes/navigation.ejs")%>
    <%- include("../includes/side-navigation.ejs")%>
    <main class="wrapper">
        <section class="container">
            <form action="/add-ticket" method="POST">
                <div class="form__control">
                    <label for="title">Title</label>
                    <input type="text" placeholder="Enter name of ticket" id="title" name="title">
                </div>
                <div class="form__control">
                    <label for="severity">Severity</label>
                    <select name="severity">
                        <option value="urgent" default>Severe</option>
                        <option value="moderate" >Moderate</option>
                        <option value="minor" >Minor</option>
                    </select>
                </div>
                <div class="form__control">
                    <label for="description">Description</label>
                    <textarea name="description"></textarea>
                </div>
                <div class="form__control">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                    <button type="submit" class="btn btn__cta">Add Ticket</button>
                </div>
            </form>
        </section>
    </main>
<%- include("../includes/footer.ejs")%>